{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://mlp.dev/schemas/v0.1/memory-envelope.schema.json",
  "title": "MLP MemoryEnvelope",
  "description": "Ledger-facing record containing attestations, pointers to encrypted blobs, and lineage information",
  "type": "object",
  "required": [
    "mlp_version",
    "envelope_id",
    "cid",
    "content_hash",
    "created_at",
    "scope",
    "kind",
    "access_policy_ref",
    "lineage",
    "attestations"
  ],
  "properties": {
    "mlp_version": {
      "type": "string",
      "description": "Version of the MLP specification",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "examples": ["0.1"]
    },
    "envelope_id": {
      "type": "string",
      "description": "Unique identifier for this envelope",
      "format": "uuid"
    },
    "cid": {
      "type": "string",
      "description": "Content-addressed identifier pointing to the encrypted blob",
      "examples": ["bafybeigdyrzt5sfp7udm7hu76uh7y26nf3efuylqabf3oclgtqy55fbzdi"]
    },
    "content_hash": {
      "type": "string",
      "description": "Hash of the plaintext or canonical plaintext form",
      "pattern": "^[a-fA-F0-9]{64}$"
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of creation",
      "format": "date-time"
    },
    "scope": {
      "type": "string",
      "description": "Ownership scope of the memory",
      "enum": ["user", "agent", "shared", "system"]
    },
    "kind": {
      "type": "string",
      "description": "Type of memory content",
      "enum": ["episodic", "semantic", "reflection", "kernel_ref", "policy", "tombstone"]
    },
    "access_policy_ref": {
      "type": "string",
      "description": "Reference to the AccessPolicy governing this envelope",
      "format": "uri"
    },
    "lineage": {
      "type": "object",
      "description": "Provenance and relationship information",
      "required": ["parents", "supersedes", "branches"],
      "properties": {
        "parents": {
          "type": "array",
          "description": "Envelope IDs this memory derives from",
          "items": { "type": "string", "format": "uuid" }
        },
        "supersedes": {
          "type": "array",
          "description": "Envelope IDs this memory replaces",
          "items": { "type": "string", "format": "uuid" }
        },
        "branches": {
          "type": "array",
          "description": "Envelope IDs representing alternative interpretations",
          "items": { "type": "string", "format": "uuid" }
        }
      }
    },
    "attestations": {
      "type": "array",
      "description": "Cryptographic attestations from various parties",
      "items": { "$ref": "attestation.schema.json" },
      "minItems": 1
    },
    "epoch_id": {
      "type": "string",
      "description": "Identifier for the identity epoch this memory belongs to"
    },
    "topic_tags": {
      "type": "array",
      "description": "Topic tags (may be encrypted)",
      "items": { "type": "string" }
    },
    "risk_class": {
      "type": "string",
      "description": "Risk classification for this memory",
      "enum": ["low", "med", "high"]
    },
    "ttl_hint": {
      "type": "string",
      "description": "Suggested review time in ISO 8601 duration format",
      "format": "duration",
      "examples": ["P30D", "P1Y"]
    },
    "metadata_commitment": {
      "type": "string",
      "description": "Cryptographic commitment to metadata for privacy"
    }
  },
  "additionalProperties": false
}
